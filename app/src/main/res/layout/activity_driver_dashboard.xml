<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_map"
    tools:context=".DriverDashboard"
    android:id="@+id/driverDashboard">

    <TextView
        android:id="@+id/dashboardtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Dashboard"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textSize="50dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_name"
        android:text="Driver Name"
        android:layout_below="@id/dashboardtxt"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"/>
    <Button
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/pre_insp_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pre-Inspection Check"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/dashboardtxt"/>

    <Button
        android:id="@+id/edit_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pre_insp_check"
        android:layout_alignBottom="@+id/pre_insp_check"
        android:layout_toEndOf="@+id/pre_insp_check"
        android:layout_toRightOf="@+id/pre_insp_check"
        android:background="@android:drawable/ic_menu_edit" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Start Trip"
        android:textSize="70dp" />


    <Button
        android:id="@+id/edit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/post_insp_check"
        android:layout_alignBottom="@+id/post_insp_check"
        android:layout_toEndOf="@+id/post_insp_check"
        android:layout_toRightOf="@+id/post_insp_check"
        android:background="@android:drawable/ic_menu_edit" />

    <Button
        android:id="@+id/post_insp_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post-Inspection Check"
        android:textSize="40dp"
        android:layout_above="@id/signOut"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>
    <Button
        android:id="@+id/signOut"
        android:textSize="30dp"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:text="Sign Out" />
</RelativeLayout>